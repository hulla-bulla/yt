# todo in this branch

something similar to this: to install palywright when installing this package. 

from setuptools import setup, find_packages
from setuptools.command.install import install
import subprocess
import sys

with open("README.md", "r", encoding="utf-8") as fh:
    long_description = fh.read()

with open("requirements.txt", "r", encoding="utf-8") as fh:
    requirements = fh.read().splitlines()

class CustomInstallCommand(install):
    """Customized setuptools install command - runs `playwright install`."""
    def run(self):
        install.run(self)
        subprocess.check_call([sys.executable, "-m", "playwright", "install"])

setup(
    name='yt',
    version='0.0.12',
    author='HullaBulla',
    author_email='hullabulla666@gmail.com',
    description='YouTube download helper using yt-dlp and ffmpeg',
    long_description=long_description,
    long_description_content_type="text/markdown",
    url='https://github.com/hulla-bulla/yt',
    py_modules=['yt', 'app'],
    packages=find_packages(),
    install_requires=requirements,
    python_requires='>=3.10',
    classifiers=[
        "Programming Language :: Python :: 3.11",
        "Operating System :: Windows",
    ],
    cmdclass={
        'install': CustomInstallCommand,
    },
    entry_points='''
        [console_scripts]
        yt=yt:cli
    '''
)


# then update

to launch yt upgrade should update both playwright and yt-dlp to latest versions
